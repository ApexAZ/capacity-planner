{
	"name": "capacity-planner",
	"version": "1.0.0",
	"description": "",
	"main": "dist/server/index.js",
	"scripts": {
		"build": "npm run lint && npm run copy-static && tsc",
		"copy-static": "mkdir -p dist/public && cp -r src/public/* dist/public/ 2>/dev/null || true",
		"dev": "npm run copy-static && concurrently --kill-others \"npm run dev:tsc\" \"npm run dev:server\"",
		"dev:tsc": "tsc --watch --preserveWatchOutput",
		"dev:server": "nodemon --delay 1 --watch dist dist/server/index.js",
		"dev:copy": "npm run copy-static && echo 'Static files copied - restart server if needed'",
		"check-static": "tsx scripts/ensure-static-files.ts",
		"postbuild": "npm run check-static",
		"start": "node dist/server/index.js",
		"lint": "eslint \"**/*.ts\" --ignore-path .eslintignore --fix",
		"lint:check": "eslint \"**/*.ts\" --ignore-path .eslintignore",
		"lint:core": "eslint \"src/{models,routes,services,utils,middleware,config,database}/**/*.ts\" --fix",
		"lint:core:check": "eslint \"src/{models,routes,services,utils,middleware,config,database}/**/*.ts\"",
		"format": "prettier --write \"**/*.{ts,js,json}\" --ignore-path .prettierignore",
		"format:check": "prettier --check \"**/*.{ts,js,json}\" --ignore-path .prettierignore",
		"type-check": "tsc --noEmit",
		"quality": "npm run lint:core:check && npm run format:check && npm run type-check",
		"quality:full": "npm run lint:check && npm run format:check && npm run type-check",
		"test": "vitest src/",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"test:integration": "vitest tests/integration/",
		"test:all": "vitest",
		"test:quality": "npm test && npm run quality"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/express-rate-limit": "^5.1.3",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^24.0.4",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"eslint": "^8.57.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.2.5",
		"supertest": "^7.1.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.3",
		"@types/pg": "^8.15.4",
		"bcrypt": "^6.0.0",
		"concurrently": "^9.2.0",
		"dotenv": "^16.6.0",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.1",
		"nodemon": "^3.1.10",
		"pg": "^8.16.2"
	}
}
